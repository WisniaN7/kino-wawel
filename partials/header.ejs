                <li class="signin">
                    <a href="logowanie">Logowanie</a>
                    <span>|</span>
                    <a href="rejestracja">Rejestracja</a>
                </li>
            <% } %>
        </ul>
        <% if (user) { %>
            <div class="user-menu">
                <div class="user">
                    <div class="icon-user">
                        <span class="head"></span>
                        <span class="body"></span>
                    </div>
                </div>
                <menu>
                    <li><p class="username"> <%= user.username %> </p></li>
                    <li><a href= <%= user.username + '/bilety' %> >Moje bilety</a></li>
                    <li><a href= <%= user.username + '/recenzje' %> >Moje recenzje</a></li>
                    <li><a href= <%= user.username + '/obejrzane' %> >Obejrzane filmy</a></li>
