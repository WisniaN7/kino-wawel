        <span class="right"></span>
    </div>
    <div class="line">
        <span class="left"></span>
        <span class="right"></span>
    </div>
</div>
<div id="navigation">
    <nav>
        <ul>
            <% if (user?.role == 'admin') { %>
                <li><a href="administracja">Administracja</a></li>
            <% } %>
            <li><a href="repertuar">Repertuar</a></li>
            <li><a href="wydarzenia">Wydarzenia</a></li>
            <li><a href="kontakt">Kontakt</a></li>
